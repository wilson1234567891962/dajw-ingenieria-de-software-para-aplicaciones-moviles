<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="artist" type="com.co.retrofit.app.feature.model.dto.Artist"/>
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            tools:context=".feature.view.fragments.AlbumsOfArtistFragment"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <com.co.retrofit.app.feature.view.fragments.HeaderView
                android:id="@+id/home_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        <TextView
                android:id="@+id/artist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{artist.description}" />

        <TextView
                android:id="@+id/txt_no_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_no_comments"
                android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                android:id="@+id/albumsOfArtistRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/album_of_artist_item"></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</layout>