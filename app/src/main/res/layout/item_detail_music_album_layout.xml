<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/title_list_recycle"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/_16sdp"
            android:textColor="@color/blue"
            android:textSize="@dimen/_16sdp" />

    <TextView
            android:id="@+id/duration_list_recycle"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_alignBaseline="@id/title_list_recycle"
            android:layout_toEndOf="@id/title_list_recycle"
            android:layout_marginRight="@dimen/_24sdp"
            android:textColor="@color/blue"
            android:textSize="@dimen/_16sdp" />

    <View
            android:id="@+id/item_second_separator"
            android:layout_marginTop="@dimen/_16sdp"
            android:layout_below="@+id/duration_list_recycle"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_marginRight="@dimen/_16sdp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dark_gray"/>

</RelativeLayout>